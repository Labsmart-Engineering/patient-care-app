<div class="flex flex-col items-center justify-center p-20">
  <h1 class="text-5xl font-bold mb-5">Patient Details</h1>

  <p>
    <strong>First Name:</strong>
    <%= @patient.first_name %>
  </p>

  <p>
    <strong>Last Name:</strong>
    <%= @patient.last_name %>
  </p>

  <p>
    <strong>Phone Number:</strong>
    <%= @patient.phone_number %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @patient.email %>
  </p>

  <p>
    <strong>Disease:</strong>
    <%= @patient.disease %>
  </p>

  <p>
    <strong>Age:</strong>
    <%= @patient.age %>
  </p>

  <div class="flex gap-10">
    <%= link_to 'Edit', edit_patient_path(@patient), class: "btn btn-primary" %>
    <%= link_to 'Back', patients_path, class: "btn btn-secondary" %>
    
    <%= form_with(model: @patient, method: :delete, local: true) do %>
      <%= submit_tag 'Delete', class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>